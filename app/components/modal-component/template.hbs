<!-- Require {{author}} , {{date}}, {{link}}, {{tags}} -->

<div class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" {{action 'closeModal'}} aria-hidden="true">&times;</button>
        <h4 style='text-align: center;' class="modal-title">Author:
          <strong>{{author}}</strong>
        </h4>
      </div>

      <div class="modal-body">
        <p style='text-align: center;'>Date:
          <strong>{{date}}</strong>
        </p>
        <p style='text-align: center;'>
          <img style='background-size: auto 100%; width : 100%;' src="{{link}}" alt="Image">
        </p>

        <!-- {{#if tags}}
          <p style='text-align: center;'> Tags:
            <strong>{{tags}}</strong>
          </p>
        {{/if}} -->
        <p style='text-align: center;'> Tags:
          {{#each tag in tags}}
            <a href="http://localhost:4200/?keywords={{tag}}">
              <strong>#{{tag}}</strong>
            </a>

            {{else}}
              <strong>Sorry, no tags defined.</strong>
          {{/each}}
        </p>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-lg center-block" {{action 'closeModal' }}>Close</button>
        <!-- <button type="button" class="btn btn-primary btn-lg center-block" data-dismiss="modal">Close</button> -->
      </div>

    </div>
  </div>
</div>
